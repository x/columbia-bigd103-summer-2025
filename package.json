{
  "name": "columbia-bigd103",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:intro": "slidev --base lessons/introduction/ lessons/introduction/slides.md --port 3030",
    "dev:hello": "slidev --base /lessons/python/hello_world/ lessons/python/hello_world/slides.md --port 3030",
    "dev:operators": "slidev --base /lessons/python/operators/ lessons/python/operators/slides.md --port 3030",
    "dev:conditionals": "slidev --base /lessons/python/conditionals/ lessons/python/conditionals/slides.md --port 3030",
    "dev:loops": "slidev --base /lessons/python/loops/ lessons/python/loops/slides.md --port 3030",
    "dev:functions": "slidev --base /lessons/python/functions/ lessons/python/functions/slides.md --port 3030",

    "build:intro": "slidev build --base /lessons/introduction/ lessons/introduction/slides.md --out ../../dist/lessons/introduction",
    "build:hello": "slidev build --base /lessons/python/hello_world/ lessons/python/hello_world/slides.md --out ../../../dist/lessons/python/hello_world",
    "build:operators": "slidev build --base /lessons/python/operators/ lessons/python/operators/slides.md --out ../../../dist/lessons/python/operators",
    "build:conditionals": "slidev build --base /lessons/python/conditionals/ lessons/python/conditionals/slides.md --out ../../../dist/lessons/python/conditionals",
    "build:loops": "slidev build --base /lessons/python/loops/ lessons/python/loops/slides.md --out ../../../dist/lessons/python/loops",
    "build:functions": "slidev build --base /lessons/python/functions/ lessons/python/functions/slides.md --out ../../../dist/lessons/python/functions",

    "build:all": "npm run build:intro && npm run build:hello && npm run build:operators && npm run build:conditionals && npm run build:loops && npm run build:functions"
  },
  "dependencies": {
    "@slidev/cli": "^51.8.2",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "slidev-addon-python-runner": "^0.1.3",
    "vue": "^3.5.17"
  }
}
